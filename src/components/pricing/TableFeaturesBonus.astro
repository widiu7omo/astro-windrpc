---
import FeatureItemList from "./FeatureItemList.astro";

const pluginFeatures = [
  {
    title: "Plugin Elementor PRO $49",
    pro: true,
    basic: true,
  },
  {
    title: "Plugin WP Rocket PRO $49",
    pro: true,
    basic: true,
  },
  {
    title: "Theme GeneratePress $49",
    pro: true,
    basic: true,
  },
];
---

<h3 class="mt-10 text-sm font-bold text-gray-900">BONUS $147</h3>
<div class="mt-6 relative">
  <div
    class="absolute inset-0 flex items-stretch pointer-events-none"
    aria-hidden="true"
  >
    <div class="w-1/3 pr-4"></div>
    <div class="w-1/3 px-4">
      <div class="w-full h-full bg-white rounded-lg shadow"></div>
    </div>
    <div class="w-1/3 px-4">
      <div class="w-full h-full bg-white rounded-lg shadow-md"></div>
    </div>
  </div>
  <table class="relative w-full">
    <caption class="sr-only"> Perk comparison</caption>
    <thead>
      <tr class="text-left">
        <th scope="col">
          <span class="sr-only">Perk</span>
        </th>

        <th scope="col">
          <span class="sr-only">Paket Basic</span>
        </th>

        <th scope="col">
          <span class="sr-only">Paket PRO</span>
        </th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-100">
      {
        pluginFeatures.map((item, key) => (
          <FeatureItemList item={item} key={key} />
        ))
      }
    </tbody>
  </table>
  <div
    class="absolute inset-0 flex items-stretch pointer-events-none"
    aria-hidden="true"
  >
    <div class="w-1/3 pr-4"></div>
    <div class="w-1/3 px-4">
      <div class="w-full h-full rounded-lg ring-1 ring-black ring-opacity-5">
      </div>
    </div>
    <div class="w-1/3 px-4">
      <div
        class="w-full h-full rounded-lg ring-2 ring-primary ring-opacity-100"
      >
      </div>
    </div>
  </div>
</div>
