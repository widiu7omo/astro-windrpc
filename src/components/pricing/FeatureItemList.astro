---
export interface Props {
  item: {
    title: string;
    pro: boolean;
    basic: boolean;
  };
  key: any;
}
const { item } = Astro.props;
---

<tr>
  <th
    scope="row"
    class="w-1/4 py-3 pr-4 text-left text-sm font-medium text-gray-600"
  >
    {item.title}
  </th>

  <td class="px-4 relative w-1/4 py-0 text-center">
    <span class="relative w-full h-full py-3">
      {
        item.basic ? (
          <svg
            class="mx-auto h-5 w-5 text-gray-600"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
              clip-rule="evenodd"
            />
          </svg>
        ) : (
          <svg
            class="mx-auto h-5 w-5 text-gray-400"
            x-description="Heroicon name: solid/x"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
              clip-rule="evenodd"
            />
          </svg>
        )
      }
      <span class="sr-only">
        {item.basic ? "Yes" : "No"}
      </span>
    </span>
  </td>

  <td class="px-4 relative w-1/4 py-0 text-center">
    <span class="relative w-full h-full py-3">
      {
        item.pro ? (
          <svg
            class="mx-auto h-5 w-5 text-primary"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
              clip-rule="evenodd"
            />
          </svg>
        ) : (
          <svg
            class="mx-auto h-5 w-5 text-gray-400"
            x-description="Heroicon name: solid/x"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
              clip-rule="evenodd"
            />
          </svg>
        )
      }
      <span class="sr-only">{item.pro ? "Yes" : "No"}</span>
    </span>
  </td>
</tr>
